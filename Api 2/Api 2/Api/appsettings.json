{
  // ConnectionStrings: Contiene información sobre las cadenas de conexión a bases de datos
  "ConnectionStrings": {
    // DefaultConnection: Define la cadena de conexión por defecto para la base de datos
    "DefaultConnection": "Server=127.0.0.1;Port=3306;Database=retoJuego;Uid=root;password=admin;"
    // Server: Dirección del servidor de la base de datos (localhost)
    // Port: Puerto de conexión a la base de datos (MySQL por defecto en 3306)
    // Database: Nombre de la base de datos a la cual conectar
    // Uid: ID de usuario para el acceso a la base de datos
    // password: Contraseña para el acceso a la base de datos
  },
  // Logging: Configura el registro de eventos y errores en la aplicación
  "Logging": {
    // LogLevel: Define el nivel de detalle de los logs
    "LogLevel": {
      // Default: Nivel por defecto de log (Information, Warning, Error, etc.)
      "Default": "Information",
      // Microsoft.AspNetCore: Nivel específico de log para componentes de ASP.NET Core
      "Microsoft.AspNetCore": "Warning"
    }
  },
  // AllowedHosts: Especifica los hosts permitidos para acceder a la aplicación
  "AllowedHosts": "*"
  // "*": Permite el acceso desde cualquier host, se puede restringir a dominios específicos
}